@model CartViewModel

@{
    ViewData["Title"] = "My Cart";
}

<div class="row">
    <div class="col-md-8">
        @if (Model.Items.Count() > 0)
        {
            <div class="row">
                @foreach (var item in Model.Items)
                {
                <div class="col-md-6">
                        <img class="w-50" src="~/images/product.png" asp-append-version="true" />
                        <div class="col">
                            <h4>@item.Product.Name</h4>
                        </div>
                        <hr />
                        <div class="col">
                            <h4>Price: $@item.Product.Price</h4>
                        </div>
                        <hr />
                        <div class="col">
                            <h4>Quantity: @item.ProductQuantity</h4>
                        </div>
                    <hr class="bg-info h-2" />
                </div>
                }
            </div>

            <div class="col">
                <div class="form-group">
                    <label for="OrderNote">Order node:</label>
                    <textarea class="form-control" rows="5" id="OrderNote"></textarea>
                </div>
            </div>
        }
        else
        {
            <h4><i>You haven't added any products yet.</i></h4>
        }
    </div>
    <div class="col-md-4">
        Order Summary
        <hr class="bg-info" />
        <div class="col">
            Subtotal
            <hr />
        </div>
        <div class="col">
            Discount
            <hr />
        </div>
        <div class="col">
            Order Total
            <hr />
        </div>
        <div class="col">
            <button class="w-100 btn btn-info">Order</button>
            <hr />
        </div>
    </div>
</div>