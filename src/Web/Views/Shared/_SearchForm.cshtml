<form method="get">
    <div class="row">
        <div class="col-md-4">
            @await Component.InvokeAsync("Categories")
        </div>
        <div class="col-md-4">
            @await Component.InvokeAsync("Brands")
        </div>
        <div class="col-md-4">
            <h5>Search:</h5>
            <div class=d-flex>
                <input name="SearchFilter" class="form-control mr-sm-2" type="search" placeholder="By name" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Filter</button>
            </div>
        </div>
    </div>
</form>