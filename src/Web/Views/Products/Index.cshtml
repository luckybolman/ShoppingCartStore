@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <!-- SIDEBAR -->
    <div class="col-md-4 col-lg-2 col-xl-2 ">
        <partial name="_Sidebar" />
    </div>

    <div class="col-md-8 col-lg-10 col-xl-10">

        <!-- HEADER & SEARCH FORM -->
        <div class="d-flex justify-content-around">
            <div>
                <partial name="_SearchForm" />
            </div>
            <div class="d-flex justify-content-end">
                <partial name="_CartPartial" />
            </div>
        </div>

        <hr class="bg-info hr-2">

        @if (Model.Count() > 0)
        {
            <div class="row ml-1">
                <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 text-center mb-5">
                    @foreach (var product in Model)
                    {
                        <div class="thumbnail">
                            <div class="caption">
                                <a href="#">
                                    <img src="https://www.t-mobile.com/content/dam/t-mobile/en-p/cell-phones/apple/apple-iphone-xr/blue/Apple-iPhoneXr-Blue-2-3x.jpg" class="w-75">
                                </a>
                                <h5 class="mt-2">@product.Name</h5>
                                <p>@product.Price</p>
                                <form asp-action="AddToCart" asp-route-id="@product.Id" asp-controller="Cart">
                                    <button class="btn btn-primary">Add to cart</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
        <h4><i>There are no products for sale yet.</i></h4>
        }

    </div>
</div>